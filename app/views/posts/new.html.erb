<%= provide(:title, 'Post message') %>

<div class="row">
  <div class="small-6 columns">
    <h1>Create post!</h1>
    <p>All times are UTC. The time now is <strong><%= Time.zone.now %></strong></p>
    <%= form_for(@post, url: posts_create_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :message %>
      <%= f.text_area :message %>

      <%= f.label :end_time %>
      <%= f.datetime_local_field :end_time %>

      <%= f.submit "Post my message", class: "button hollow" %>

    <% end %>
  </div>
</div>
